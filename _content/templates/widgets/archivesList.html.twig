<section>
    <h3 class="widget-title">Blog Archives</h3>
    <div class="accordion" id="accordion2">
            {% for month in blog.months|reverse %}
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2"
                           href="#{{ month.name|replace({' ': ''}) }}">
                            <i class="{% if loop.first %}icon-minus{% else %}icon-plus{% endif %} icon-white"></i>
                            {{ month.name }}
                        </a>
                    </div>
                    <div id="{{ month.name|replace({' ': ''}) }}"
                         class="accordion-body collapse {% if loop.first %}in{% endif %}">
                        <div class="accordion-inner">
                            <ul class="icons ul-list-2">
                                {% for post in month.posts %}
                                    <li><a href="{{ pcurl(post.url) }}">{{ post.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
    </div>
</section>